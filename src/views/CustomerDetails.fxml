      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Last Name" />
            <TextOnlyTextField fx:id="lNameTF" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Phone" />
            <NumberOnlyTextField fx:id="phoneTF" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Email" />
            <TextField fx:id="emailTF" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Address" />
            <TextField fx:id="addressTF" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="City" />
            <TextOnlyTextField fx:id="cityTF" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Date Of Birth" />
            <DatePicker fx:id="dateOfBirthDP" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="200.0" text="Invoices" />
            <ComboBox fx:id="invoiceCB" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS" />
